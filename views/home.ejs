<%- include('partials/header') %> 

    <!--PROFILE-->
    <div class="row mt-4">
        <div class="col-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">Contact</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col">
                            <img src="/assets/profile.jpg" class="card-img-top" alt="Profile Pic" style="width: 18rem">
                        </div>
                        <div class="col">
                            <h6>Matt Clifford</h6>
                            <p class="card-text">Tel: +44 (0)7890 913 089</p>
                            <p class="card-rext">Email: matthewclifford@hotmail.co.uk</p>
                            <a href="/documents/matt_clifford_CV.pdf" target="_blank" class="btn btn-sm text-nowrap"><i class="fa-solid fa-file"></i> CV</a>
                            <a href="https://www.linkedin.com/in/mattclifford123/" target="_blank" rel="noopener noreferrer"><button class="btn btn-sm text-nowrap"><i class="fa-brands fa-linkedin"></i> LinkedIn</button></a>
                            <a href="https://github.com/BuenVia" target="_blank" rel="noopener noreferrer"><button class="btn btn-sm text-nowrap"><i class="fa-brands fa-github"></i> GitHub</button></a>
                        </div>
                    </div>

                </div>
            </div>
        </div>

        <!--LANGUAGES-->
        <div class="col-4">
            <div class="card" style="height: 100%">
                <div class="card-header">
                    <h5 class="card-title">Languages & Frameworks</h5>
                </div>
                <div class="card-body">
                    <div class="card mt-1"><p><i class="fa-brands fa-html5"></i> HTML</p></div>
                    <div class="card mt-1"><P><i class="fa-brands fa-css3-alt"></i> CSS</P></div>
                    <div class="card mt-1"><p><i class="fa-brands fa-square-js"></i> JavaScript</p></div>
                    <div class="card mt-1"><p><i class="fa-brands fa-bootstrap"></i> BootStrap</p></div>
                    <div class="card mt-1"><p><i class="fa-brands fa-node-js"></i> Node JS</p></div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-4">
            <div class="card" style="height: 100%">
                <div class="card-header">
                    <h5 class="card-title">Latest Blog Post</h5>
                </div>
                <div class="card-body">

                </div>
            </div>
        </div>
        <div class="col-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">About Me</h5>
                </div>
                <div class="card-body">
                    <iframe width="560" height="315" src="https://www.youtube.com/embed/5y3jUiatGyI" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                </div>
            </div>
        </div>
    </div>

    <!--PROJECTS--> 
    <div class="mt-3 mb-5">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">Projects</h5>
            </div>
            <div class="card-body">         
                <% projects.forEach(project => { %>
                    <div class="card mb-3 bg-wd">
                        <div class="row g-0">
                            <div class="col-md-8">
                                <div class="card-body">
                                    <h5 class="card-title"><%= project.title %></h5>
                                    <p class="card-text"><%= project.content %></p>
                                    <div class="card-btn-cont">
                                        <a href="<%= project.site %> " target="_blank" rel="noopener noreferrer"><button class="btn btn-sm btn-st"><i class="fa-solid fa-laptop-code"></i> Site</button></a>
                                        <a href="<%= project.gitHub %>" target="_blank" rel="noopener noreferrer"><button class="btn btn-sm btn-st"><i class="fa-brands fa-github"></i> Github</button></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>    
                <% }) %> 
            </div>
        </div>
    </div>




    <%- include('partials/footer') %> 