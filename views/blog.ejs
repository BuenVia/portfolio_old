<%- include('partials/header') %>

<% posts.forEach(post => { %>
    <div class="row mt-4 col-6">

        <div class="card">
            <h6><%= post.title %></h6>
            <p>By <%= post.auth %></p>
            <p><%= post.content.substring(0, 20) %>...</p>
            <a href="/blog/<%- post._id %> ">Read more...</a>
        </div>
    </div>

<% }) %>

<%- include('partials/footer') %> 